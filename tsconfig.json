{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",  // 使用 ES 模块
    "moduleResolution": "node",
    "declaration": true,  // 生成类型声明文件
    "declarationDir": "./dist",  // 指定声明文件输出目录
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",  // 输出目录
    "jsx": "react",  // 如果需要支持 JSX
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
